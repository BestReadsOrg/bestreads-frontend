  "schema": {
    "menuItems": {
      "type": "array",
      "required": true,
      "description": "Array of menu items to display in the dropdown",
      "itemSchema": {
        "id": {
          "type": "string",
          "required": true,
          "description": "Unique identifier for the menu item"
        },
        "label": {
          "type": "string",
          "required": false,
          "description": "Display text for the item (not required for dividers)"
        },
        "icon": {
          "type": "string",
          "required": false,
          "description": "Emoji or icon to display"
        },
        "action": {
          "type": "string",
          "required": false,
          "enum": ["navigate", "logout"],
          "description": "Action type to perform"
        },
        "type": {
          "type": "string",
          "required": true,
          "enum": ["route", "action", "divider"],
          "description": "Type of menu item: route (navigation), action (custom action), divider (separator)"
        },
        "target": {
          "type": "string",
          "required": false,
          "description": "Navigation target path (required when type is route)"
        },
        "variant": {
          "type": "string",
          "required": false,
          "enum": ["default", "danger"],
          "description": "Visual variant of the item"
        },
        "visible": {
          "type": "boolean",
          "required": false,
          "default": true,
          "description": "Whether the item is visible"
        }
      }
    }
  },
  "behavior": {
    "closeOnClick": true,
    "closeOnClickOutside": true
  }
}
