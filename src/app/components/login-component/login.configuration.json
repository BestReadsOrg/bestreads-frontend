{
  "id": "Login.Component.Route",
  "configId": "Login.Configuration.json",
  "schema": {
    "title": {
      "type": "string",
      "required": true,
      "description": "Login page title"
    },
    "description": {
      "type": "string",
      "required": false,
      "description": "Login page description text"
    },
    "actions": {
      "type": "array",
      "required": true,
      "description": "Login action buttons",
      "itemSchema": {
        "label": {
          "type": "string",
          "required": true
        },
        "action": {
          "type": "string",
          "required": true
        },
        "visible": {
          "type": "boolean",
          "required": false,
          "default": true
        },
        "variant": {
          "type": "string",
          "enum": ["primary", "secondary", "danger", "ghost"],
          "required": false,
          "default": "primary"
        }
      }
    },
    "user": {
      "type": "object",
      "required": false,
      "description": "User information for pre-filled forms",
      "properties": {
        "name": "string",
        "email": "string"
      }
    }
  },
  "behavior": {
    "filterInvisibleActions": true,
    "showUserInfo": true
  }
}
