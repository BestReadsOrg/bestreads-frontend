{
  "id": "Auth.Component.Route",
  "configId": "Auth.Configuration.json",
  "schema": {
    "header": {
      "type": "object",
      "required": true,
      "properties": {
        "title": {
          "type": "string",
          "required": true
        },
        "subtitle": {
          "type": "string",
          "required": false
        },
        "logo": {
          "type": "string",
          "required": false
        }
      }
    },
    "fields": {
      "type": "array",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["text", "email", "password", "tel", "url", "number"],
            "required": true
          },
          "name": {
            "type": "string",
            "required": true
          },
          "label": {
            "type": "string",
            "required": true
          },
          "placeholder": {
            "type": "string",
            "required": false
          },
          "required": {
            "type": "boolean",
            "default": false
          },
          "validation": {
            "type": "object",
            "required": false
          },
          "autoComplete": {
            "type": "string",
            "required": false
          }
        }
      }
    },
    "actions": {
      "type": "array",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "required": true
          },
          "actionId": {
            "type": "string",
            "required": true
          },
          "type": {
            "type": "string",
            "enum": ["submit", "button", "link"],
            "required": true
          },
          "variant": {
            "type": "string",
            "enum": ["primary", "secondary", "outline", "ghost", "danger"],
            "default": "primary"
          }
        }
      }
    }
  },
  "behavior": {
    "validateOnChange": true,
    "validateOnBlur": true,
    "showPasswordRequirements": true,
    "autoFocusFirstField": true
  }
}
