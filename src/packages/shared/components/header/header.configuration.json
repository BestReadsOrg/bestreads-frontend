{
  "id": "Header.Component.Route",
  "configId": "Header.Configuration.json",
  "title": "BestReads",
  "actions": [
    {
      "label": "Home",
      "action": "navigateHome",
      "type": "scroll",
      "target": "top",
      "visible": true,
      "roles": ["guest", "user", "admin"]
    },
    {
      "label": "Features",
      "action": "navigateFeatures",
      "type": "scroll",
      "target": "features",
      "visible": true,
      "roles": ["guest", "user", "admin"]
    },
    {
      "label": "How It Works",
      "action": "navigateHowItWorks",
      "type": "scroll",
      "target": "how-it-works",
      "visible": true,
      "roles": ["guest", "user", "admin"]
    },
    {
      "label": "Testimonials",
      "action": "navigateTestimonials",
      "type": "scroll",
      "target": "testimonials",
      "visible": true,
      "roles": ["guest", "user", "admin"]
    },
    {
      "label": "Integrations",
      "action": "navigateIntegrations",
      "type": "scroll",
      "target": "integrations",
      "visible": true,
      "roles": ["guest", "user", "admin"]
    },
    {
      "label": "Login",
      "action": "navigateLogin",
      "type": "route",
      "target": "/login",
      "visible": true,
      "roles": ["guest"]
    }
  ],
  "schema": {
    "title": {
      "type": "string",
      "required": true,
      "description": "Main header title text"
    },
    "actions": {
      "type": "array",
      "required": false,
      "description": "Array of navigation actions",
      "itemSchema": {
        "label": {
          "type": "string",
          "required": true,
          "description": "Display text for the action"
        },
        "action": {
          "type": "string",
          "required": true,
          "description": "Unique action identifier"
        },
        "type": {
          "type": "string",
          "enum": ["scroll", "route", "external"],
          "required": true,
          "description": "Type of navigation: scroll (section), route (internal page), external (new tab)"
        },
        "target": {
          "type": "string",
          "required": true,
          "description": "Navigation target: element ID for scroll, path for route, URL for external"
        },
        "visible": {
          "type": "boolean",
          "required": false,
          "default": true,
          "description": "Whether the action is visible"
        },
        "roles": {
          "type": "array",
          "required": false,
          "description": "User roles that can see this action (guest, user, admin)"
        }
      }
    }
  },
  "behavior": {
    "displayTitle": true,
    "filterInvisibleActions": true,
    "filterByRole": true,
    "smoothScroll": true
  }
}
