{
  "id": "Header.Component.Route",
  "configId": "Header.Configuration.json",
  "title": "BestReads",
  "actions": [
    {
      "label": "Home",
      "action": "navigateHome",
      "visible": true,
      "roles": ["guest", "user", "admin"]
    },
    {
      "label": "My Books",
      "action": "navigateBooks",
      "visible": true,
      "roles": ["user", "admin"]
    },
    {
      "label": "Profile",
      "action": "navigateProfile",
      "visible": true,
      "roles": ["user", "admin"]
    },
    {
      "label": "Admin",
      "action": "navigateAdmin",
      "visible": true,
      "roles": ["admin"]
    }
  ],
  "schema": {
    "title": {
      "type": "string",
      "required": true,
      "description": "Main header title text"
    },
    "actions": {
      "type": "array",
      "required": false,
      "description": "Array of navigation actions",
      "itemSchema": {
        "label": {
          "type": "string",
          "required": true
        },
        "action": {
          "type": "string",
          "required": true
        },
        "visible": {
          "type": "boolean",
          "required": false,
          "default": true
        },
        "roles": {
          "type": "array",
          "required": false,
          "description": "User roles that can see this action"
        }
      }
    }
  },
  "behavior": {
    "displayTitle": true,
    "filterInvisibleActions": true,
    "filterByRole": true
  }
}
